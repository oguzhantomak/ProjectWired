
@{
    ViewData["Title"] = "Giriş";
}


@model ProjectWired.Core.DTOs.User.UserLoginDto

<div class="container">
    <div class="row">
        <div class="col align-self-center">
            <form asp-action="Login" asp-controller="Home" method="post" id="login-form">
                <div asp-validation-summary="All"></div>
                <div class="mb-3 form-group col-sm-3">
                    <label asp-for="Email" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="Email" class="form-control" required>
                </div>
                <div class="mb-3 form-group col-sm-3">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" required>
                </div>
                <button type="submit" form="login-form" class="btn btn-primary">Giriş Yap</button>
            </form>
        </div>
    </div>

</div>

